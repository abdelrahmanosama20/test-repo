package Components;

public class ReservationStationEntry {
    public boolean busy;
    public String op;
    public Double vj; // Use Double for optional values (nullable).
    public Double vk; // Use Double for optional values (nullable).
    public String qj;
    public String qk;
    public Integer timeRemaining; // Use Integer for optional values (nullable).
    public Double result; // Use Double for optional values (nullable).
    public Integer currentIndex; // Use Integer for optional values (nullable).
    public instruction instruction;
    // tag string

    // Constructors
    /*
     * public ReservationStationEntry(instruction instruction) {
     * // this.busy = busy;
     * // this.op = op;
     * // this.vj = vj;
     * // this.vk = vk;
     * // this.qj = qj;
     * // this.qk = qk;
     * // this.timeRemaining = timeRemaining;
     * // this.result = result;
     * // this.currentIndex = historyIndex;
     * this.instruction = instruction;
     * }
     */

    public void takeinstruction(instruction instruction) {
        this.instruction = instruction;
        this.busy = true;
    }

    // Getters and Setters
    public boolean isBusy() {
        return busy;
    }

    public void setBusy(boolean busy) {
        this.busy = busy;
    }

    public String getOp() {
        return op;
    }

    public void setOp(String op) {
        this.op = op;
    }

    public Double getVj() {
        return vj;
    }

    public void setVj(Double vj) {
        this.vj = vj;
    }

    public Double getVk() {
        return vk;
    }

    public void setVk(Double vk) {
        this.vk = vk;
    }

    public String getQj() {
        return qj;
    }

    public void setQj(String qj) {
        this.qj = qj;
    }

    public String getQk() {
        return qk;
    }

    public void setQk(String qk) {
        this.qk = qk;
    }

    public Integer getTimeRemaining() {
        return timeRemaining;
    }

    public void setTimeRemaining(Integer timeRemaining) {
        this.timeRemaining = timeRemaining;
    }

    public Double getResult() {
        return result;
    }

    public void setResult(Double result) {
        this.result = result;
    }

    public Integer getHistoryIndex() {
        return currentIndex;
    }

    public void setHistoryIndex(Integer historyIndex) {
        this.currentIndex = historyIndex;
    }

    public instruction geInstruction() {
        return instruction;
    }

    @Override
    public String toString() {
        return "ReservationStationEntry: [Instruction = " + instruction + "]";
    }

}